}

<div>
    <button><a asp-page="Add">Add Widget</a></button>
</div>
<ul>
@foreach (var widget in Model.ViewModel.Widgets)
{
        <li>
            @widget.Id - @widget.Name <button><a asp-page="Details" asp-route-id="@widget.Id">Details</a></button>
        </li>
}
</ul>